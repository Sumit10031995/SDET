    <build>
        <plugins>
            <!-- Add the maven-cucumber-reporting plugin -->
            <plugin>
                <groupId>net.masterthought</groupId>
                <artifactId>maven-cucumber-reporting</artifactId>
                <version>5.5.0</version> <!-- Use the latest version available -->
                <executions>
                    <execution>
                        <id>generate-reports</id>
                        <phase>post-integration-test</phase>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                        <configuration>
                            <projectName>Your_Project_Name</projectName>
                            <!-- Set the output directory for the reports -->
                            <outputDirectory>${project.build.directory}/cucumber-reports</outputDirectory>
                            <!-- Set the format for the reports (html, json, or json-pretty) -->
                            <jsonFiles>
                                <param>${project.build.directory}/cucumber.json</param>
                            </jsonFiles>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
